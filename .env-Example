# ============================================
# CONFIGURACIÓN DE MOODLE CON DOCKER
# ============================================

# ----- PUERTOS -----
# Puerto para acceder a Moodle (HTTP)
MOODLE_PORT=9080
# Puerto para acceder a Moodle (HTTPS)
MOODLE_SSL_PORT=9443
# Puerto de MySQL (para conexiones externas)
MYSQL_PORT=3307
# Puerto de phpMyAdmin
PHPMYADMIN_PORT=9081
# Puerto de Redis
REDIS_PORT=6380
# Puerto SMTP de Mailhog
MAILHOG_SMTP_PORT=2025
# Puerto web de Mailhog
MAILHOG_WEB_PORT=9025

# ----- BASE DE DATOS -----
MOODLE_DATABASE_TYPE=mariadb
MOODLE_DATABASE_HOST=mariadb
MOODLE_DATABASE_PORT=3306
MOODLE_DATABASE_NAME=moodle
MOODLE_DATABASE_USER=moodle
MOODLE_DATABASE_PASSWORD=moodle123
MYSQL_ROOT_PASSWORD=rootpass123

# ----- ADMINISTRADOR DE MOODLE -----
MOODLE_ADMIN_USER=admin
MOODLE_ADMIN_PASSWORD=Admin123!
MOODLE_ADMIN_EMAIL=admin@localhost.com
MOODLE_SITE_NAME=Moodle Pruebas

# ----- CONFIGURACIÓN DE PHP -----
PHP_MEMORY_LIMIT=512M
PHP_MAX_EXECUTION_TIME=300
PHP_UPLOAD_MAX_FILESIZE=256M
PHP_POST_MAX_SIZE=256M

# ----- REDIS (CACHÉ) -----
REDIS_PASSWORD=redis123

# ----- PHPMYADMIN -----
PMA_UPLOAD_LIMIT=256M

# ----- OPCIONES ADICIONALES -----
# Establecer en "yes" para omitir la instalación inicial
MOODLE_SKIP_BOOTSTRAP=no

# ----- DOCKER COMPOSE -----
# Nombre del proyecto (usado para prefijos de contenedores)
COMPOSE_PROJECT_NAME=moodle
